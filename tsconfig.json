{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir": "src",
        "outDir": "build",
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "types": [
            "node",
            "mocha"
        ],
        // Generate d.ts files
        "declaration": true,
        // go to js file when using IDE functions like
        // "Go to Definition" in VSCode
        "declarationMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "tests"
    ]
}
